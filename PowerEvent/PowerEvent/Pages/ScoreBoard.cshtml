@page
@model PowerEvent.ScoreBoardModel
@{
    ViewData["Title"] = "ScoreBoard";
}
<div container>
    <div class="text-center">
        <h1>ScoreBoard @Model.EventName</h1>
        <div class="row">
            <div class="col-sm-6">
                <p>Team : @Model.TeamEt</p>
            </div>
            <div class="col-sm-6">
                <p>Team : @Model.TeamTo</p>

            </div>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Navn</th>
                        <th scope="col">1. Score</th>
                        <th scope="col">2. Score</th>
                        <th scope="col">3. Score</th>
                        <th scope="col">4. Score</th>
                        <th scope="col">5. Score</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>@Name1</th>
                        <th>@Name1Score1</th>
                        <th>@Name1Score2</th>
                        <th>@Name1Score3</th>
                        <th>@Name1Score4</th>
                        <th>@Name1Score5</th>
                    </tr>
                    <tr>
                        <th>@Name2</th>
                        <th>@Name2Score1</th>
                        <th>@Name2Score2</th>
                        <th>@Name2Score3</th>
                        <th>@Name2Score4</th>
                        <th>@Name2Score5</th>
                    </tr>
                    <tr>
                        <th>@Name3</th>
                        <th>@Name3Score1</th>
                        <th>@Name3Score2</th>
                        <th>@Name3Score3</th>
                        <th>@Name3Score4</th>
                        <th>@Name3Score5</th>
                    </tr>
                    <tr>
                        <th>@Name4</th>
                        <th>@Name4Score1</th>
                        <th>@Name4Score2</th>
                        <th>@Name4Score3</th>
                        <th>@Name4Score4</th>
                        <th>@Name4Score5</th>
                    </tr>
                    <tr>
                        <th>@Name5</th>
                        <th>@Name5Score1</th>
                        <th>@Name5Score2</th>
                        <th>@Name5Score3</th>
                        <th>@Name5Score4</th>
                        <th>@Name5Score5</th>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
