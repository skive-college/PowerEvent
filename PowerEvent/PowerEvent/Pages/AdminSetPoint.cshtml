@page
@model PowerEvent.AdminSetPointModel
@{
    ViewData["Title"] = "AdminSetPoint";
}


    <form method="post">
        <style> #EventList {width: 120px; } #EventList:focus { min-width: 120px; width: auto; } </style>
        <select id="EventList" data-val="true" asp-for="@Model.SelectedEvent" onchange="listChanged('EventList')">
            @{
                if (@Model.SelectedEvent == -1)
                {
                    <option value="-1">Vælg et event</option>
                }

                foreach (var item in @Model.EventList)
                {
                    <option value="@item.Id">@item.Navn</option>
                }
            }
        </select>
        <style> #AktivitetList { width: 120px; } #AktivitetList:focus { min-width: 120px; width: auto; } </style>
        <select id="AktivitetList" asp-for="@Model.SelectedAktivitet" onchange="listChanged('AktivitetList')">
            @{
                if (@Model.SelectedEvent == -1)
                {
                    <option value="-1" hidden></option>
                }
                if (@Model.SelectedEvent != -1)
                {
                    if (@Model.SelectedAktivitet == -1)
                    {
                        <option value="-1">Vælg en Aktivitet</option>
                    }
                    foreach (var item in @Model.AktivitetList)
                    {
                        <option value="@item.Id">@item.Navn</option>
                    }
                }
            }
        </select>
        <select id="OrderList" asp-for="@Model.SelectedOrder" onchange="listChanged('OrderList')">
            @{
                if (@Model.SelectedEvent != -1 && Model.SelectedAktivitet != -1)
                {
                    <option value="-1">Vælg en runde</option>
                    <option value="1">Runde1</option>
                    <option value="2">Runde2</option>
                    <option value="2">Runde3</option>
                    <option value="2">Runde4</option>
                    <option value="2">Runde5</option>
                }
            }

        </select><br />
        <input type="submit" value="Vælg" asp-page-handler="CmdSkift" />

        @{
            if (@Model.SelectedAktivitet != -1 && Model.SelectedOrder != -1)
            {
                <h1>Hold Sport</h1>
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md">
                            <p>Vælg et hold</p>
                            <select id="HoldList" onchange="listChanged('HoldList')" asp-for="@Model.SelectedHold" multiple style=" height: 350px; width: 300px">
                                @{
                                    <option value="-1" hidden></option>
                                    foreach (var item in @Model.HoldList)
                                    {
                                        <option value="@item.Id">@item.Navn</option>
                                    }
                                }
                            </select>
                            <input type="submit" value="Slet" asp-page-handler="CmdRemoveHold" />
                        </div>

                    </div>
                </div>
                if (false)//check om det er en holdsport og tilføj denne menu hvis det er!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
                {
                    <h1>Deltager Sport</h1>
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-md">
                                <p>Vælg et hold</p>
                                <select id="DeltagerList" asp-for="@Model.SelectedDeltager" onchange="listChanged('DeltagerList')" multiple style=" height: 350px; width: 300px">
                                    @{
                                        <option value="-1" hidden></option>
                                        foreach (var item in @Model.DeltagerList)
                                        {
                                            <option value="@item.Id">@item.Navn</option>
                                        }
                                    }
                                </select>
                                <input type="submit" value="Slet" asp-page-handler="CmdRemoveHold" />
                            </div>
                        </div>
                    </div>
                }
                if (Model.SelectedDeltager != -1)
                {
                    <div class="col-12 col-md">
                    <p>Holdets points</p>
                    <select id="PointList" asp-for="@Model.SelectedPoint" onchange="listChanged('PointList')" multiple style=" height: 350px; width: 300px">
                        @{
                            <option value="-1" hidden></option>
                            if (@Model.DeltagerList[Model.SelectedDeltager].ScoreList != null)
                            {
                                foreach (var item in @Model.DeltagerList[Model.SelectedDeltager].ScoreList)
                                {
                                    <option value="@item.Id">@item.Score</option>
                                }
                            }
                            
                        }

                    </select>
                        <input type="text" placeholder="Giv point" />
                        <input type="submit" value="Gem" asp-page-handler="CmdAddHoldPoint" />
                        <input type="submit" value="Slet" asp-page-handler="CmdDeleteDHoldPoint" />
                    </div>
                }
            }
        }
    </form>

@section Scripts
{
    <script>
        function listChanged(listen)
        {
            let url = new URL(location.href);

            let EventList = document.getElementById('EventList');
            let EventListValgt = EventList.options[EventList.selectedIndex].value;
            url.searchParams.set("EventList", EventListValgt);

            let AktivitetList = document.getElementById('AktivitetList');
            let AktivitetListValgt = AktivitetList.options[AktivitetList.selectedIndex].value;
            url.searchParams.set("AktivitetList", AktivitetListValgt);

            let OrderList = document.getElementById('OrderList');
            let OrderListValgt = OrderList.options[OrderList.selectedIndex].value;
            url.searchParams.set("OrderList", OrderListValgt);

            @{ 
                if (@Model.SelectedAktivitet != -1 && Model.SelectedOrder != -1)
                {
                    @: let HoldList = document.getElementById('HoldList');
                    @: let HoldListValgt = HoldList.options[HoldList.selectedIndex].value;
                    @: url.searchParams.set("HoldList", HoldListValgt);

                    if (Model.SelectedHold != -1 && Model.valgtAktivitet.HoldSport == 1)
                    {
                        @: let DeltagerList = document.getElementById('DeltagerList');
                        @: let DeltagerListValgt = DeltagerList.options[DeltagerList.selectedIndex].value;
                        @: url.searchParams.set("DeltagerList", DeltagerListValgt);
                    }
                    if (Model.SelectedHold != -1)
                    {
                        @: let PointList = document.getElementById('PointList');
                        @: let PointListValgt = PointList.options[PointList.selectedIndex].value;
                        @: url.searchParams.set("PointList", PointListValgt);
                    }
                }
            } 

            url.searchParams.set("navn", listen);            
            location.href = url;
        }
    </script>
}